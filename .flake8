[flake8]
# E501 string literal is too long
# W503 line break before binary operator
# E203 whitespace before ':' (triggered on list slices like xs[i : i + 5])
# E704 multiple statements on one line (def)
ignore = E501, W503, E203, E704
exclude =
    .git,
    .tmp,
    .venv,
    .conda,
    .nox,
    .pytest_cache
    __pycache__,
    __init__.py
